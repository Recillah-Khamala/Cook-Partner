<div class="mt-40">
  <br>
  <div class="flex justify-end items-center mt-3">
    <%= link_to 'Add Food', new_food_path, class:'bg-blue-500 px-4 py-2 font-semibold text-white inline-flex space-x-2 rounded' %> 
  </div>
  <br>
  <br>
  <table class="m-auto border border-slate-500 ">
    <thead>
      <tr class="bg-blue-500 flex-no wrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
        <th class="border border-slate-600 p-4 text-white font-semibold "> Food </th>
        <th class="border border-slate-600 p-4 text-white font-semibold"> Measurement Unit </th>
        <th class="border border-slate-600 p-4 text-white font-semibold"> Price </th>
        <th class="border border-slate-600 p-4 text-white font-semibold "> Actions </th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <%= render partial: "food", locals: {data: food, price: true, quantity: false} %>
          <td class="border border-slate-600 p-4 text-xs" ><%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        
      <% end %>

    </tbody>
  </table>
</div>