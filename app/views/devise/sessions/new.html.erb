<div class="container flex justify-center items-center h-screen">
  <div class="flex justify-center">
    <div class="p-6 rounded-lg bg-indigo-100">
      <div class="text-xl font-bold">
        <h1>Sign In</h1>
        <span>Access your account.</span>
      </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-4">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'e.g. jon@snow.com', class: "w-full border-gray-400 py-2 px-3 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "w-full border-gray-400 py-2 px-3 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Log In", class: "bg-blue-500 text-white py-2 px-4 rounded-md" %>
    </div>

    <div class="text-m">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

  </div>
  </div>
</div>
