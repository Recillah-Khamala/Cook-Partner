<div class="mx-auto md:w-10/12 w-full flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="w-full flex flex-col gap-4 px-6 divide-y-2">
      <div class="block space-y-4 pb-2">
        <h1 class="text-2xl text-center font-bold"><%= @recipe.name %></h1>
        <div class="flex justify-between">
          <p class="w-full text-left">Preparation time: <%= @recipe.prep_time %></p>
          <span class="flex gap-2 items-center"><%= render "shared/checkbox", data: @recipe %></span>
        </div>
        <p class="w-full text-left">Cooking time: <%= @recipe.cooking_time %></p>
        <p class="text-left">Steps to go...</p>
        <div class="flex justify-between items-center">
          <div class="inline-block px-6 py-1 border-2 border-blue-400 text-blue-400 font-medium text-xs leading-tight capitalize rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
            <%= button_to 'Generate Shopping List' %>
          </div>
          <div class="inline-block px-6 py-1 border-2 border-blue-400 text-blue-400 font-medium text-xs leading-tight capitalize rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
          <% if can? :create, @recipe %>
            <%= link_to 'Add Ingredients', new_recipe_recipe_food_path(current_user, @recipe) %> 
          <% end %>
          </div>
        </div>
      </div>
      <div class="w-full py-6">
        <%= render "recipes/table", foods: @recipe.foods, headers: ['food', 'quantity', 'value', 'actions'] %>
      </div>
    </div>
  </div>
</div>
